<p id="notice"><%= notice %></p>

<h3>Sites</h3>
<a href="<%= new_site_path %>" class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">add</i></a>
<table>
  <thead>
    <tr>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.url %></td>
        <td><%= link_to 'Show Tags', tag_path(site.tag), class: 'waves-effect waves-light btn' %></td>
        <td><%= link_to 'Edit', edit_site_path(site), class: "waves-effect waves-light btn" %></td>
        <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' }, class: "waves-effect waves-light btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<a href="<%= new_site_path %>" class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">add</i></a>
